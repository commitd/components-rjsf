{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es2020",
    "lib": ["es2020", "dom"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "jsx": "react",
    "skipLibCheck": true,
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "dist",
    "paths": {
      "@emotion/core": ["./typings.d.ts"],
      "@storybook/theming": ["./typings.d.ts"]
    }
  },
  "include": ["src"]
}
